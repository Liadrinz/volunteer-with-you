<view>
    <view style="padding-top: .5rem;">
        <search onSearch="{{search}}" />
    </view>
    <view class="cu-list menu" style="padding-bottom: 4rem;">
        <navigator class="cu-item" wx:for="{{applyList}}" wx:for-index="idx" wx:for-item="apply">
            <view class="content padding-tb-sm">
                <view>
                    <text class="text-xl text-bold padding">{{apply.activity.title}}</text>
                </view>
                <view class="text-sm">
                    <text class="text-grey padding">申请人姓名: {{apply.applier.name}}</text>
                </view>
                <view class="text-sm">
                    <text class="text-grey padding">申请人学号: {{apply.applier.buptId}}</text>
                </view>
            </view>
            <image style="width: 200rpx; height: 200rpx;" src="/images/vol.jpg" mode="aspectFill" />
        </navigator>
        <view class="text-grey margin-top" style="text-align: center;">无更多申请</view>
    </view>
</view>