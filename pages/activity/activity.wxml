<view>
    <view style="padding-top: .5rem;">
        <search onSearch="{{search}}" onFilter="{{filter}}" filterFields="{{filterFields}}"/>
    </view>
    <!-- (封装了的)发布活动按钮 -->
    <floatButton title="发布活动" wx:if="{{actType === 'work' && showFloatBtn}}" url="/pages/publishDetail/publishDetail" btnClass="cu-btn round bg-gradual-green lg" iconClass="cuIcon-add"/>
    <!-- <view wx:if="{{actType === 'work' && showFloatBtn}}" class="margin" style="z-index: 2; position: fixed; bottom: 2.5rem; display: inline;">
        <navigator url="/pages/publishDetail/publishDetail" class="cu-btn round bg-gradual-green lg">
            <view class="text-xl">
                <text class="cuIcon-add"></text>
                发布活动
            </view>
        </navigator> 
    </view> -->

    <view class="cu-list menu" style="padding-bottom: 4rem;">
        <navigator class="cu-item" wx:for="{{activityList}}" wx:for-index="idx" wx:for-item="act" url="/pages/activityDetail/activityDetail?id={{act.id}}&actType={{actType}}">
            <view class="content padding-tb-sm">
                <view>
                    <text class="text-xl text-bold padding">{{act.title}}</text>
                </view>
                <view wx:if="{{actType === 'vol'}}">
                    <view class="text-sm">
                        <text class="text-grey padding">报名时间: {{act.beginRegTime}}</text>
                    </view>
                    <view class="text-sm">
                        <text class="text-grey padding">活动时间: {{act.beginTime}}</text>
                    </view>
                    <view class="text-sm">
                        <text class="text-grey padding">活动地点: {{act.location}}</text>
                    </view>
                </view>
                <view wx:elif="{{actType === 'work'}}">
                    <view class="text-sm">
                        <text class="text-grey padding">报名时间: {{act.beginRegTime}}</text>
                    </view>
                    <view class="text-sm">
                        <text class="text-grey padding">活动时间: {{act.beginTime}}</text>
                    </view>
                    <view class="text-sm">
                        <text class="text-grey padding">活动地点: {{act.location}}</text>
                    </view>
                </view>
            </view>
            <image style="width: 200rpx; height: 200rpx;" src="/images/vol.jpg" mode="aspectFill" />
        </navigator>
        <view wx:if="{{loading}}" class="cu-load bg-gradual-red {{!isrunout?'loading':'over'}}"></view>
        <!-- <view class="text-grey margin-top" style="text-align: center;">无更多活动</view> -->
    </view>
</view>
